{
  "name": "firestore-rules-tests",
  "version": "1.0.0",
  "description": "Test suite for DrFirst Business Case Generator Firestore security rules",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:emulator": "firebase emulators:exec --only firestore 'npm test'",
    "setup": "npm install && firebase setup:emulators:firestore"
  },
  "keywords": [
    "firestore",
    "security-rules",
    "testing",
    "firebase"
  ],
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.3",
    "@types/jest": "^29.5.5",
    "firebase-tools": "^12.7.0",
    "jest": "^29.7.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/*.test.js"
    ],
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "./jest.setup.js"
    ]
  }
} 